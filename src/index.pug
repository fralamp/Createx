              button.arrow.arrow--project(href='#')
                svg.arrow__pic
                  use(xlink:href='img/svg/sprite1.svg#icon-arrow-right')
        img.supported__photo(src='img/brands/face2.jpg' alt='photo happy clients')
    section.section-info
      article.facts
        h2.facts__title
          | Some facts and figures
        .facts__statistic
          .facts__inner-card
            .facts__diagram.item--1
              span 98%
            p.facts__text
              | Totally satisfied clients
          .facts__inner-card
            .facts__diagram.item--2
